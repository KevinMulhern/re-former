<%= form_for @user do |f| %>
<ul>
	<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
	<p>
		<%= f.label :username, 'Your username here:' %>
		<%= f.text_field :username %>
	</p>
	<p>
	<%= f.label :email, 'Your email here:' %>
	<%= f.email_field :email, :value => "example@example.com" %>
	</p>
	<p>
	<%= f.label :password, 'Your password here:'%>
	<%= f.password_field :password %>
	</p>
	<%= f.submit %>
<% end %>